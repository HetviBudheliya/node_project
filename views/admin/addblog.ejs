 <%- include('header') %>

            <!-- Form Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-6 mb-5">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">Blog Form</h6>
                            <form method="post" action="/insertBlogData" enctype="multipart/form-data">
                                <input type="hidden" value="<%= single.id %>" name="editid">
                                
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Blog Title</label>
                                    <input type="text" name="title" value="<%= single.title %>" class="form-control" id="exampleInputEmail1"
                                        aria-describedby="emailHelp">
                                </div>

                                <div class="mb-3">
                                    <label for="exampleInputPassword1" class="form-label">Blog Description</label>
                                    <input type="text" name="description" value="<%= single.description %>" class="form-control" id="exampleInputPassword1">
                                </div>

                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Blog Picture</label>
                                    <input type="file" name="image" class="form-control" id="exampleInputEmail1"
                                        aria-describedby="emailHelp">
                                        <% if(single) { %>
                                            <img src="<%= single.image %>" alt="">
                                        <% } %>
                                </div>

                                <% if(single) { %>
                                    <button type="submit" value="edit" class="btn btn-primary">Edit Blog</button>
                                <% }else{ %>
                                    <button type="submit" class="btn btn-primary">Create Blog</button>
                                <% } %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Form End -->


            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Your Site Name</a>, All Right Reserved. 
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
