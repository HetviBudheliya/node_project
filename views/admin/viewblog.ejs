<%- include('header') %>
<style>
    .card-body{
        text-transform: uppercase;
    }
    .btn{
        margin-top: 15px;
        font-size: 14px;
        padding: 5px 15px;
    }
    .title{
        color: aliceblue;
        font-size: 15px;
        letter-spacing: 1px;
    }
    .description{
        font-size: 14px;
        margin-top: 6px;
        letter-spacing: 0.9px;
    }
</style>

                <!-- view blog start -->
                <div class="container-fluid mt-4">
                    <div class="bg-secondary rounded-top p-4">
                        <div class="row">
                            <h5 class="card-title mb-3">View Blogs</h5>
                            <% blogData.map((val)  =>{ 
                                const{id,image,title,description} = val %>
                                    <div class="col-4">
                                        <div class="card m-2 bg-dark">
                                            <div class="card-body">
                                                <img src="<%= image %>" width="100%" height="350" style="object-fit: cover; object-position: center;" class="mb-3">
                                                <div class="title"><%= title %></div>
                                                <div class="description"><%= description %></div>
                                                <div class="d-flex justify-content-between">
                                                    <a href="/deleteBlogData?id=<%= id %>" class="btn btn-primary"> Delete</a>
                                                    <a href="/editBlogData?id=<%= id %>" class="btn btn-primary">Edit</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <!-- view blog end -->


            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Your Site Name</a>, All Right Reserved. 
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                            Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                            <br>Distributed By: <a href="https://themewagon.com" target="_blank">ThemeWagon</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->


        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/chart/chart.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/waypoints/waypoints.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>

</html>