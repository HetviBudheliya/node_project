<%- include ('header') %>
    <style>
        img{
            display: block;
            max-width: 100%;
        }
        .card-body img{
            width: 100%;
            height: 250px;
            object-fit: cover;
            object-position: center;
        }
        /* .card-body div{
            color: rgba(163, 163, 163, 0.719);
        } */
        /* .card-body .subcat{
            float: right;
        } */
    </style>
    <!-- Form Start -->
    <div class="container-fluid mt-4">
        <div class="bg-secondary rounded-top p-4">
            <div class="row">
                <h5 class="card-title mb-3">View Blogs</h5>
                <% productdata.map((val)  =>{ 
                    const{id,categoryId, subcategoryId,exsubcategoryId,name,qty,price,description,image}=val;
                %>
                        <div class="col-4">
                            <div class="card m-2 bg-dark">
                                <div class="card-body">
                                    <div>
                                        <img src="<%= image %>" class="mb-3">
                                    </div>
                                    <div class="mb-2">
                                            Category :- <span class="text-white"><%= categoryId.category %></span>
                                            Sub Category :-<span class="text-white"> <%= subcategoryId.subcategory %> </span>
                                    </div>
                                    <div class="mb-2">
                                        Extra Category :- <%= exsubcategoryId.exsubcategory %>
                                    </div>
                                    <div class="mb-2">Name :- <span class="text-white"><%= name %></span></div>
                                    <div class="mb-2">Quantity :- <span class="text-white"><%= qty %></span></div>
                                    <div class="mb-2">Price :- <span class="text-white"><%= price %></span></div>
                                    <div class="mb-2">Description :- <span class="text-white"><%= description %></span></div>
                                    <div class="d-flex justify-content-between">
                                        <a href="/deleteProduct?id=<%= id %>" class="btn btn-primary"> Delete</a>
                                        <a href="" class="btn btn-primary">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                <% }) %>
            </div>
        </div>
    </div>
    <!-- Form End -->

    <%- include ('footer') %>

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
        </div>

        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="lib/chart/chart.min.js"></script>
        <script src="lib/easing/easing.min.js"></script>
        <script src="lib/waypoints/waypoints.min.js"></script>
        <script src="lib/owlcarousel/owl.carousel.min.js"></script>
        <script src="lib/tempusdominus/js/moment.min.js"></script>
        <script src="lib/tempusdominus/js/moment-tim0ezone.min.js"></script>
        <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

        <!-- Template Javascript -->
        <script src="js/main.js"></script>

        </body>

        </html>